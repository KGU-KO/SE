<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/check_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.first.miso.Check_Info"
    android:background="@drawable/background"
    android:weightSum="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:layout_weight="0.45">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="인원수"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:id="@+id/covers3"
                android:layout_alignBaseline="@+id/dayin3"
                android:layout_alignBottom="@+id/dayin3"
                android:layout_toEndOf="@+id/dayin3"
                android:layout_marginStart="31dp" />

            <TextView
                android:text="입실"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:layout_marginTop="26dp"
                android:id="@+id/dayin3"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/paybutton" />

            <TextView
                android:text="퇴실"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:layout_marginEnd="26dp"
                android:id="@+id/dayout3"
                android:layout_alignBaseline="@+id/dayin3"
                android:layout_alignBottom="@+id/dayin3"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="요금"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:layout_alignTop="@+id/covers3"
                android:layout_alignStart="@+id/dayout3"
                android:id="@+id/cost3" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.65">

        <Button
            android:text="결제"
            android:id="@+id/paybutton"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_width="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="monospace" />

        <Button
            android:text="예약취소"
            android:layout_width="250dp"
            android:id="@+id/cancelbutton"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="monospace" />

    </LinearLayout>

</LinearLayout>