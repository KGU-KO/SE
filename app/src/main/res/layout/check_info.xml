<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/check_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.first.miso.check_info">

    <Button
        android:text="Pay~~"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="155dp"
        android:id="@+id/paybutton"
        android:layout_marginStart="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="reserve_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancelbutton"
        android:layout_alignTop="@+id/paybutton"
        android:layout_alignStart="@+id/paybutton"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="인원수"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_below="@+id/dayin3"
        android:layout_alignStart="@+id/dayin3"
        android:layout_marginTop="15dp"
        android:id="@+id/covers3" />

    <TextView
        android:text="요금"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_alignTop="@+id/covers3"
        android:layout_alignStart="@+id/dayout3"
        android:id="@+id/cost3" />

    <TextView
        android:text="퇴실"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_marginEnd="26dp"
        android:id="@+id/dayout3"
        android:layout_alignBaseline="@+id/dayin3"
        android:layout_alignBottom="@+id/dayin3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="입실"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_marginTop="26dp"
        android:id="@+id/dayin3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/paybutton" />

</RelativeLayout>