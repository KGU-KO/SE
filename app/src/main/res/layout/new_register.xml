<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_register"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@drawable/background">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:weightSum="1">

        <TextView
            android:text="    ID"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_alignBaseline="@+id/id_input"
            android:layout_alignBottom="@+id/id_input"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginStart="25dp"
            android:layout_weight="0.99"
            android:fontFamily="monospace" />

        <EditText
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/id_input"
            android:hint="아이디를 입력하세요." />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Password"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/pwd_input"
            android:layout_toStartOf="@+id/pwd_input"
            android:layout_alignTop="@+id/pwd_input"
            android:layout_weight="0.54"
            android:fontFamily="monospace" />

        <EditText
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/pwd_input"
            android:hint="패스워드를 입력하세요." />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="    Name"
            android:textSize="24sp"
            android:id="@+id/textView5"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:layout_alignBottom="@+id/name_input"
            android:layout_toStartOf="@+id/name_input"
            android:layout_alignTop="@+id/name_input"
            android:layout_weight="0.67"
            android:fontFamily="monospace" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/name_input"
            android:hint="이름을 입력하세요." />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="   Phone"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:id="@+id/textView6"
            android:layout_weight="1.42"
            android:fontFamily="monospace" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone_input"
            android:layout_below="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:hint="번호를 입력하세요."
            android:layout_weight="0.11" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0.09"></LinearLayout>

    <Button
        android:text="회원가입"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_make_button"
        android:layout_above="@+id/register_cancel_button"
        android:layout_alignParentStart="true"
        android:background="?android:attr/panelBackground" />

    <Button
        android:text="취소"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        />

</LinearLayout>