<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/move_ski_site"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.first.miso.Move_Ski_Site"
    android:weightSum="1"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="125dp">

        <ImageView
            android:layout_width="103dp"
            android:layout_height="103dp"
            app:srcCompat="@drawable/gonziamlogo1"
            android:id="@+id/imageView" />

        <Button
            android:text="곤지암스키장"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:id="@+id/move_button1"
            android:layout_alignParentEnd="true"
            android:fontFamily="monospace" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>

        <ImageView
            app:srcCompat="@drawable/vivaldipark"
            android:id="@+id/imageView3"
            android:layout_width="96dp"
            android:layout_height="103dp" />

        <Button
            android:text="비발디파크"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/move_button4"
            android:layout_below="@+id/move_button3"
            android:layout_alignParentStart="true"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="198dp"
        android:weightSum="1"
        android:layout_width="125dp">

        <ImageView
            app:srcCompat="@drawable/alpensia1"
            android:id="@+id/imageView2"
            android:layout_width="103dp"
            android:layout_weight="0.16"
            android:layout_height="96dp" />

        <Button
            android:text="알펜시아스키장"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:id="@+id/move_button2"
            android:layout_below="@+id/move_button1"
            android:layout_alignParentStart="true"
            android:fontFamily="monospace" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="103dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="103dp"
            app:srcCompat="@drawable/dksan"
            android:id="@+id/imageView4"
            android:layout_height="105dp" />

        <Button
            android:text="덕유산스키장"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/move_button3"
            android:layout_below="@+id/move_button2"
            android:layout_alignParentStart="true"
            android:fontFamily="monospace" />
    </LinearLayout>

    <Button
        android:text="Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="76dp"
        android:id="@+id/move_undo" />
</LinearLayout>
