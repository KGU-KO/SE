<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_register"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@drawable/background">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:elevation="1dp">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="342dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:text="      ID"
            android:textSize="24sp"
            android:id="@+id/id"
            android:layout_above="@+id/pw"
            android:scrollHorizontally="true"
            android:fontFamily="monospace" />

        <EditText
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_input"
            android:layout_alignBaseline="@+id/id"
            android:layout_alignBottom="@+id/id"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="match_parent"
            android:text="PASSWORD"
            android:textSize="24sp"
            android:id="@+id/pw"
            android:layout_above="@+id/loginButton"
            android:layout_alignStart="@+id/id"
            android:layout_weight="2.33"
            android:layout_width="151dp" />

        <EditText
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:text=""
            android:ems="10"
            android:id="@+id/pw_input"
            android:layout_alignBaseline="@+id/pw"
            android:layout_alignBottom="@+id/pw"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_width="199dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="로그인"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="회원가입"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpButton"
            android:layout_below="@+id/loginButton"
            android:layout_alignParentStart="true"
            android:layout_weight="0.09" />

        <Button
            android:id="@+id/exitButton"
            android:text="종료"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpButton"
            android:layout_alignParentStart="true"
            android:layout_weight="0.09" />
    </LinearLayout>

</LinearLayout>